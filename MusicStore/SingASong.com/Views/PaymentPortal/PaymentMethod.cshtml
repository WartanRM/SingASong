<style>
    header {
        background-color: black;
        color: white;
        padding: 10px;
        text-align: center;
        position: relative;
    }

    .go-back-btn {
        position: absolute;
        top: 110px;
        left: 30px;
        text-decoration: none;
        color: black;
        font-size: 16px;
    }
    .payment-container{
        padding-top:70px;
    }
    .spacepay{
        padding-top:15px;
    }
