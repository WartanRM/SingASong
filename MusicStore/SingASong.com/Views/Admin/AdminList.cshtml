                    <div id="song-list">
                    <h2 style="text-align:center;">Song List</h2>
                    <div class="song-item">
                <span class="icon">🎵</span>
                    <div class="song-details">
                    <p><strong>Song Name:</strong> song.Name</p>
                    <p><strong>Artists:</strong> song.Artists</p>
                    <p><strong>Album/Movie:</strong> song.AlbumMovie</p>
                    <p><strong>Upload Time:</strong> song.UploadTime</p>
                    <p><strong>Length:</strong> song.Length</p>
                </div>
                
                
                <input type="checkbox" name="selectedSongs" value="song.Id" />
            </div>
                        -->
            <div id="song-list">
                <h2 style="text-align:center;">Song List</h2>
                @foreach (var song in Model)
                {
                    <div class="song-item">
                        <span class="icon">🎵</span>
                        <p>Title: @song.Title</p>
                        <p>Artist: @song.Artist</p>
                        <p>Album: @song.Album</p>
                        <p>Genre: @song.Genre</p>
                        <p>Year: @song.Year</p>
                        <input type="checkbox" style="align-items:right;" name="selectedSongs" value="@song.Id" />
                    </div>
                }
</div>
    </div>

    <div id="admin-actions">
            <button type="submit" class="btn btn-group1">Delete Selected Songs</button>
            <button type="submit" class="btn btn-group1">Edit/Update Song</button>
            <button type="submit" class="btn btn-group1">Add Song</button
    </div>
</body>
